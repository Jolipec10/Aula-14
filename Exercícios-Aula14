//Exercício 5:
function podeEstudarNaFaculdade(ensinoMedio, Idade, cursandoFaculdade){
    if(ensinoMedio == "sim" && Idade >= 18 &&
        cursandoFaculdade  == "não"){
        return "Pode estudar na faculdade";
    }else { return "Não pode estudar na faculdade"; }
}
console.log(podeEstudarNaFaculdade(
    prompt("Concluiu o ensino médio?").toLocaleLowerCase(),
    Number(prompt("Sua idade")),
    prompt("Está cursando outra faculdade?").
    toLocaleLowerCase(),
));
